#include <iostream>
#include <string>
using namespace std;

string reemplazarEspacios(const string & cadena, char caracter);
int main() {
    string cadena;
    char caracter;

    cout << "Ingresa una cadena de texto: ";
    getline(cin, cadena);

    cout << "Ingresa el caracter de reemplazo: ";
    cin >> caracter;

    string resultado = reemplazarEspacios(cadena, caracter);
    cout << "Resultado: " << resultado << endl;

    return 0;
}
string reemplazarEspacios(const string & cadena, char caracter) {
    string nuevaCadena = cadena;
    for (char & c : nuevaCadena) {
        if (c == ' ') {
            c = caracter;
        }
    }
    return nuevaCadena;
}

